@model WirelessMediaProduct.Models.Products

@{
    ViewData["Title"] = "Index";
}

<h2>Wireless Index Html</h2>


<p>
    <a asp-action="\home/prijava">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Naziv proizvoda
            </th>
            <th>
                Opis proizvoda
            </th>
            <th>
                Kategorija
            </th>
            <th>
                Proizvodjac
            </th>
            <th>
                Dobavljac
            </th>
            <th>
                Cena
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.products)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.opis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kategorija)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.proizvodjac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dobavljac)
            <td>
                @Html.DisplayFor(modelItem => item.cena)
            </td>

            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id })
                @Html.ActionLink("Details", "Details", new { /*id=item.PrimaryKey*/})
                @Html.ActionLink("Delete", "Delete", new { /*id=item.PrimaryKey*/})
            </td>
        </tr>
        }
    </tbody>
</table>